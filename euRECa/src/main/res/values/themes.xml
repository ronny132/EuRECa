<?xml version="1.0" encoding="utf-8"?>
<resources xmlns:android="http://schemas.android.com/apk/res/android">
    <style name="AppThemeDefault" parent="Theme.AppCompat.Light">
        <item name="android:windowTitleSize">50dip</item>
        <item name="android:listViewStyle">@style/TransparentListView</item>
        <item name="android:expandableListViewStyle">@style/TransparentExpandableListView</item>
        <item name="colorAccent">@color/white</item>
        <item name="colorPrimary">@color/color_primary_light_blue</item>
        <item name="windowNoTitle">true</item>
        <item name="windowActionBar">false</item>
        <item name="toolbarTheme">@style/ThemeOverlay.AppCompat.Dark</item>
        <item name="colorButtonNormal">@color/color_primary_light_blue</item>
    </style>
    
    <style name="AppThemeReverse" parent="AppThemeDefault">
        <item name="colorAccent">@color/color_primary_light_blue</item>
        <item name="colorPrimary">@color/white</item>
        <item name="toolbarTheme">@style/ThemeOverlay.AppCompat.Light</item>
    </style>
    
    <style name="AppThemeGreen" parent="AppThemeDefault">
