<resources xmlns:android="http://schemas.android.com/apk/res/android">

    <style name="TransparentListView" parent="@android:style/Widget.ListView">
        <item name="android:cacheColorHint">@android:color/transparent</item>
    </style>

    <style name="TransparentExpandableListView" parent="@android:style/Widget.ExpandableListView">
        <item name="android:cacheColorHint">@android:color/transparent</item>
    </style>

    <style name="categoryName">
        <item name="android:textSize">18sp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="userName">
        <item name="android:textSize">18sp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="textSmallAndGrey">
        <item name="android:textColor">@color/lightGrey</item>
        <item name="android:textSize">12sp</item>
    </style>

    <style name="AppThemeRed.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppThemeRed.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />
</resources>
